<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification message: 'Please fill all the fields below' %>

<%= f.association :ingredient, prompt: "Select" %>
<%= f.input :description, placeholder: "Describe (quantity, etc.)" %>

<%= f.button :submit, "Add", class: "btn btn-danger" %>
<% end %>
